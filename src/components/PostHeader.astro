---
// component imports
import { slugify, formatDate } from "../js/utils.js";

const { title, description, date, category, author, image, youtube, vimeo } =
    Astro.props;
---

<header>
    <div class="container">
        <small>
            <a href={`/category/${slugify(category)}/`} class="badge"
                >{category}</a
            >
        </small>
        <hi class="h2">{title}</hi>
        <p>
            por <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
                formatDate(date)
            }
        </p>
    </div>
    <!-- <img src={image.src} width="800" alt={image.alt} /> -->
    <div class="video-container">
        {
            youtube && (
                <iframe
                    class="responsive-video"
                    src={`https://www.youtube.com/embed/${youtube}`}
                    title="YouTube video player"
                    style="position:absolute;top:0;left:0;width:100%;height:100%;"
                    allowfullscreen
                />
            )
        }
        {
            vimeo && (
                <iframe
                    class="responsive-video"
                    src={`https://player.vimeo.com/video/${vimeo}?color=f0603f&title=0&byline=0`}
                    frameborder="0"
                    allow="autoplay; fullscreen; picture-in-picture"
                    allowfullscreen
                />
            )
        }
    </div>
</header>
